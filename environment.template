# EvolJobs.com Environment Configuration Template
# Copy this to .env.local for local development and configure for your environment

# =============================================================================
# Backend Configuration
# =============================================================================

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=false
DJANGO_SETTINGS_MODULE=Backend.settings

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,api.evoljobs.com,evoljobs-backend.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://evoljobs.com,https://www.evoljobs.com

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgres://user:password@host:5432/dbname
POSTGRES_DB=evoljobs_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# Cache and Session Configuration
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# Search Engine Configuration
# =============================================================================

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=evoljobs

# =============================================================================
# Frontend Configuration
# =============================================================================

# Next.js Public Environment Variables
NEXT_PUBLIC_API_URL=https://api.evoljobs.com
NEXT_PUBLIC_WS_URL=wss://api.evoljobs.com
NEXT_PUBLIC_BACKEND_URL=https://api.evoljobs.com
NEXT_PUBLIC_SITE_NAME=EvolJobs
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Job Search Platform

# Frontend Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# Authentication and Security
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=300
JWT_REFRESH_TOKEN_LIFETIME=604800
JWT_ROTATE_REFRESH_TOKENS=true

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# File Storage and Media
# =============================================================================

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=evoljobs-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.evoljobs.com

# Local Storage (Development)
MEDIA_URL=/media/
MEDIA_ROOT=./media/
STATIC_URL=/static/
STATIC_ROOT=./static/

# =============================================================================
# Email Configuration
# =============================================================================

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=noreply@evoljobs.com
EMAIL_HOST_PASSWORD=your-email-password

# Email Settings
DEFAULT_FROM_EMAIL=EvolJobs <noreply@evoljobs.com>
ADMIN_EMAIL=admin@evoljobs.com

# =============================================================================
# Task Queue Configuration
# =============================================================================

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TIMEZONE=UTC

# =============================================================================
# AI and Machine Learning
# =============================================================================

# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws

# =============================================================================
# External API Keys
# =============================================================================

# Job Board APIs
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# Google OAuth 2.0 Configuration
# =============================================================================

# Google OAuth Credentials (for Gmail API integration)
# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Sentry Error Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# =============================================================================
# Subscription and Payment
# =============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# Development and Testing
# =============================================================================

# Testing Configuration
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/evoljobs_test
TESTING=false

# Development Tools
DJANGO_DEBUG_TOOLBAR=false
DJANGO_EXTENSIONS=false

# =============================================================================
# Render Deployment Configuration
# =============================================================================

# These are typically set in Render dashboard, not in .env files
# RENDER_INTERNAL_HOSTNAME=
# RENDER_EXTERNAL_HOSTNAME=
# RENDER_SERVICE_NAME=
# RENDER_GIT_COMMIT=

# =============================================================================
# Security Headers and HTTPS
# =============================================================================

# HTTPS Configuration
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARNING

# Log Files
LOG_FILE_PATH=./logs/app.log
ERROR_LOG_FILE_PATH=./logs/error.log 